.container{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.cnt-box{
  width: 100%;
  box-sizing: border-box;
  background: #FFFFFF;
  border: 1px solid #DEDEDE;
  border-radius: 4px;
  margin-top: 24rpx;
  padding: 24rpx;
  overflow: hidden;
}
.cnt-box textarea{
  font-size: 14px;
  color: #999999;
  height: 160rpx;
  width: 100%;
}
.cnt-box .addpic{
  background: #F2F2F2;
  border-radius: 4px;
  width: 160rpx;
  height: 160rpx;
  margin-top: 32rpx;
  text-align: center;
  float:left;
  position:relative;
}
.cnt-box .addpic image{
  width: 56rpx;
  height: 48rpx;
  padding-top: 20px;
}
.cnt-box .addpic view view{
  font-size: 12px;
  color: #999999;
  letter-spacing: 0;
}
.send{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  padding-top: 40rpx;
}
.send view{
  background: #C4161E;
  border-radius: 4px;
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-size: 16px;
}

.weui-uploader__input-box{
  margin-right: 0;
  margin-bottom: 0;
  border: 0;
}
.weui-uploader__input-box{
  margin-right: 0;
  margin-bottom: 0;
  border: 0;
}
.weui-uploader__img{
  width: 160rpx;
  height: 160rpx;
}
.weui-uploader__file{
  margin-top: 32rpx;
  margin-right: 16rpx;
  position: relative;
  margin-bottom: 0;
}
.del_this{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.title{
  width:100%;
  height: 32px;

  line-height: 32px; 
   box-sizing:border-box; 
  background:#FFFFFF;
  border:1px solid #DEDEDE;
  border-radius:4px;
  margin-top:24rpx;
  padding:14rpx;
  overflow:hidden;
}