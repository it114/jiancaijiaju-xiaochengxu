  padding-left: 15px;
  height: 75px;
  box-sizing: border-box;
  position: relative;
}
.container{
  width: 100%;
  height: 63px;
  font-size:14px;
  color:#333;
  float: right;
  padding-top: 12px;
  border-bottom: 1px solid #f2f2f2;
  border-top: 1px solid #f2f2f2;
  overflow: hidden;
}
.containertext{
  font-size: 12px;
  float: left;
}
.containertext input{
  width: 100%;
  padding: 10px 0;
}
#containertext{
  margin-top: 6px;
  color: #C4161E;
  font-size: 18px;
}
