.address_info{
  width:100%;
  box-sizing:border-box;
  border-top:1px solid #f2f2f2;
  border-bottom:1px solid #f2f2f2;  
}
.info_detail{
  width:100%;
  padding-left:30rpx;  
  box-sizing: border-box;
}
.name_phone{
  width:100%;
  padding:24rpx 30rpx 24rpx 0;
  box-sizing: border-box;
  overflow: hidden;
}
.rcv_name{
  float:left;
  font-size: 28rpx;
  color: #333333;
  line-height:40rpx;
}
.rcv_phone{
  float:right;
  font-size: 28rpx;
  color: #333333;
  line-height:40rpx;
}
.rcv_info{
  width:100%;
  font-size:24rpx;
  color:#333333;
  line-height:34rpx;
  padding-right:30rpx;
  padding-bottom:24rpx;
  border-bottom:1px solid #f2f2f2;
  box-sizing: border-box;
}
/* .edit,.delete{
  float:right;
} */
.edit{
  position: absolute;
  top:0rpx;
  right:154rpx;
  font-size:24rpx;
  color:#333333;
}
.delete{
  top:0rpx;
  right:30rpx;
  position:absolute;
  font-size:24rpx;
  color:#333333;
}
.edit_group{
  width:100%;
  height:41px;
  line-height:41px;
  overflow: hidden;
  position:relative;
}
.edit image{
  width:28rpx;
  height:30rpx;
  vertical-align: middle; 
  margin-top:-2px; 
  margin-right:10rpx; 
}
.delete image{
  width:28rpx;
  height:30rpx;
  vertical-align: middle;   
  margin-top:-2px;
  margin-right:10rpx;   
}
.set_default{
  font-size:24rpx;
  color:#333333;
  float:left;
}
.gray_div{
  width:100%;
  height:22rpx;
  background: #f2f2f2;
}
radio-group{
  padding:0;
}
label{
  padding:0;
}
radio {  
  transform:scale(0.6); 
  position:absolute;
  top:-1px;
  left:-5px;
} 
.sda{
  padding-left:42rpx;
}
.new_addr{
  width:84%;
  height:88rpx;
  background: #C4161E;
  color:#fff;
  font-size:32rpx;
  margin-top:40rpx;
}