.add_address{
  width:100%;
  padding-left:30rpx;
  border-top:1px solid #f2f2f2;
  box-sizing: border-box;
}
.add_address input{
  width:100%;
  height:88rpx;
  padding-left:8rpx;
  padding-right:30rpx;
  border-bottom:1px solid #f2f2f2;
  font-size:28rpx;
  color:#999999;
  box-sizing: border-box;
}
#location{
  width:100%;
  height:88rpx;
  line-height: 88rpx;
  padding-left:8rpx;
  border-bottom:1px solid #f2f2f2;
  font-size:28rpx;
  color:#999999;
  box-sizing: border-box;
}
label{
  position:relative;
}
radio{
  transform:scale(0.7);
  position:absolute;
  top:0;
  left:-6rpx;
}
.sda{
  font-size:24rpx;
  color:#333333;
  padding-left:44rpx;
  box-sizing: border-box;  
}
.set_default{
  width:100%;
  padding-left:30rpx;
  margin-top:20rpx;
  box-sizing: border-box;
}
.save{
  width:84%;
  height:88rpx;
  background: #C4161E;
  color:#fff;
  font-size:32rpx;
  margin-top:40rpx;
  box-sizing: border-box;  
}