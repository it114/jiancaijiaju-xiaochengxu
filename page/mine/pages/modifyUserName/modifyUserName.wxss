.container{
  width:100%;
  height:88rpx;
  line-height:88rpx;
  border-top:1px solid #f2f2f2;
  padding-left:26rpx;
  box-sizing: border-box;
  position:relative;
}
input{
  width:554rpx;
  height:88rpx;
  font-size:28rpx;
  color:#333333;
  line-height:normal;
}
.line{
  width:100%;
  height:100%;
  position:absolute;
  bottom:0;
  border-bottom:1px solid #f2f2f2;
}
text{
  font-size:28rpx;
  color:#999999;
  position:absolute;
  top:0;
  right:30rpx;
}
button{
  width:84%;
  height:88rpx;
  line-height:88rpx;
  background: #C4161E;
  margin:40rpx auto 0;
  font-size:32rpx;
  color:#fff;
}