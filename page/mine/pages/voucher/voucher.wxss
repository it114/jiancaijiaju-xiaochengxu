#top{  
  width: 100%;
  height: 44px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-flex-direction: row;
  flex-direction: row;
  line-height: 44px;
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
  position: fixed;  
  top: 0;  
  left: 0;
  z-index: 100000;
  background: #fff;
}
#top .item{
  height: 44px;
  font-size: 14px;
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
#top .item view{
  width: 44px;
  margin: 0 auto;
}
.on{ color: #C4161E;  
    border-bottom:1rpx solid #C4161E;
}  
 .swiper-box{height: auto;overflow: auto}    
.swiper-box  .list_container{
  position: relative;
  width: 92%;
  margin: 0 auto;
  margin-top: 10px;
  border-radius: 4px;
  height:124px;
  overflow: hidden;
}
.swiper-box .list{
  width: 100%;
  height:124px;
  background:#F18882;
  color: #fff;
  display:flex;
  display:-webkit-flex;
  align-items:center;/*垂直居中*/
  -webkit-align-items : center;/*垂直居中*/
}

.swiper-box .list .price{
  float: left;
  font-size: 28px;
  margin-left: 10px;
}
.swiper-box .list .price text{
  font-size: 18px;
}


.swiper-box .list .middle{
   float: left; 
  font-size: 12px;
  width: 160px;
  /* margin: 0 auto; */
  line-height: 20px;
  margin-left: 30px;
}
.swiper-box .list .title{
  font-size: 14px;
}
.button{
  float: right;
  width: 58px;
  height: 24px;
  line-height: 24px;
  text-align: center;
  background: #fff;
  color: #C4161E;
  font-size: 12px;
  border-radius: 4px;
  margin-right: 15px;
}

#circle_left,#circle_right{
  display: block;
  position: absolute;
  top: 56px;
  width: 12px;
  height:12px;
  border-radius: 100%;
  background: #fff;
}
#circle_left{
  left: -6px;
}
#circle_right{
  right: -6px;
}
#loadMoreDiv{text-align: center;font-size: 12px;color:#999;padding-top: 10px;bottom: 10px;}
#loadMoreDiv text{
  vertical-align: 5px;
  margin-left: 2px;
}
#loadMoreDivimage{
	width: 20px;
  height: 20px;
	opacity: 0.6;
}
