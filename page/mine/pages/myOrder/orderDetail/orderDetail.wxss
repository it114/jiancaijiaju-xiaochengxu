page{
    background:#f6f6f6;    
}
.container{
    width:100%;
    height:100%;
    background:#f6f6f6;
}
.top_info{
    width:100%;
    height:200rpx;
    line-height:200rpx;
    background:#C4161F;
    padding-left:60rpx;
    font-size:30rpx;
    color:#fff;
}
.rcv_info{
    width:100%;
    height:200rpx;
    padding:40rpx 80rpx;
    background:#fff;
    box-sizing:border-box;
    position:relative;
}
.info_top{
    font-size:28rpx;
    color:#333;
}
.info_btm{
    font-size:24rpx;
    color:#666;
    line-height:20px;
}
.addr{
   width:18px;
   height:18px;
   position:absolute;
   top:80rpx;
   left:30rpx;
}
.item_detail{
    width:100%;
    height:320rpx;
    padding-left:200rpx;
    background:#fff;
    margin-top:10px;
    position:relative;
    box-sizing:border-box;
}
.left_thumb{
    width:150rpx;
    height:150rpx;
    position:absolute;
    left:30rpx;
    top:40rpx;
}
.left_thumb>image{
    width:100%;
    height:100%;
}
.right_info{
    width:100%;
    padding-top:40rpx;
    padding-right:100rpx;
    padding-bottom:40rpx;
    position:relative;
    box-sizing: border-box;
    border-bottom:1px solid #999;
}
.item_name{
    width:80%;
    font-size:32rpx;
    color:#333;
    overflow: hidden;
    text-overflow: ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 
}
.item_spec{
    font-size:28rpx;
    height: 16px;
    color:#666;
    margin-top:20rpx;
}
.item_price{
    font-size:32rpx;
    position: absolute;
    right:30rpx;
    top:40rpx;
}
.item_number{
    font-size:24rpx;
    color:#666;
    position:absolute;
    right:30rpx;
    top:100rpx;
}
.btm_info{
    width:100%;
    height:80rpx;
    padding-right:30rpx;
    line-height:80rpx;
    text-align: right;
    font-size:32rpx;
    box-sizing: border-box;
}
.btm_info .pay{
    font-size:38rpx;
    color:#C4161F;
}
.order_tag{
    width:100%;
    background:#fff;
    font-size:24rpx;
    color:#999;
    padding:30rpx;
    margin-top:20rpx;
}
.order_tag view{
    line-height:20px;
}
.notFound image{
  display: block;
  width: 187px;
  height: 128px;
  margin: 0 auto;
  padding-top: 100px;
}
.notFound text{
  display: block;
  width: 100%;
  text-align: center;
  margin-top: 10px;
  font-size: 14px;
  color: #333;
}