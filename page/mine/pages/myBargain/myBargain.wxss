.container{
  width:100%;
}
.bargain_record:last-child{
  border:none;
}
.bargain_record{
  width:100%;
  height:324rpx;
  border-bottom:22rpx solid #f2f2f2;
  box-sizing: border-box;
  position:relative;
}
.br_img{
  width:220rpx;
  height:180rpx;
  border-radius:4px;
  box-sizing: border-box;
  overflow: hidden;
  position:absolute;
  top:24rpx;
  left:30rpx;
  z-index:1;
}
.br_img image{
  width:100%;
  height:100%;
  z-index:1;  
}
.br_right{
  width:100%;
  padding-left:270rpx;
  padding-top:24rpx;
  box-sizing: border-box;
}
.br_title{
  width:100%;
  height:80rpx;
  font-size:28rpx;
  color:#333333;
  line-height:40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  padding-right:80rpx;
  box-sizing: border-box;
}

.br_attr{
  width:100%;
  font-size:20rpx;
  color:#333333;
  line-height:20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  padding-right:80rpx;
  box-sizing: border-box;
}
.buy_now{
  width:168rpx;
  height:72rpx;
  background: #C4161E;
  color:#fff;
  font-size:28rpx;
  line-height:72rpx;
  text-align: center;
  border-radius:4px;
  position:absolute;
  right:30rpx;
  bottom:24rpx;
}
.br_result{
  margin-top:56rpx;
}
.br_result .br_tag{
  font-size:24rpx;
  color:#999999;
}
.br_result .br_price{
  font-size:32rpx;
  color:#C4161E;
}
.br_result .br_fail{
  font-size:24rpx;
  color:#C4161E;
}
.hour,.minute,.second{
  width:40rpx;
  height:40rpx;
  background: #000;
  border-radius:4px;
  font-size:24rpx;
  color:#fff;
  text-align: center;
  line-height:40rpx;
  display: inline-block;
}
.colon{
  font-size:24rpx;
  margin-left:8rpx;
  margin-right:12rpx;
}
.end_tag{
  font-size:24rpx;
  color:#999999;
  margin-left:6rpx;
}
.fail_modal{
  z-index:2;
  width:120rpx;
  height:120rpx;
  background: #000;
  opacity: 0.5;
  text-align: center;
  font-size:24rpx;
  color:#fff;
  line-height:120rpx;
  position:absolute;
  left:50rpx;
  top:30rpx;
  border-radius:50%;
}
.notFound image{
  display: block;
  width: 187px;
  height: 128px;
  margin: 0 auto;
  padding-top: 100px;
}
.notFound text{
  display: block;
  width: 100%;
  text-align: center;
  margin-top: 10px;
  font-size: 14px;
  color: #333;
}

