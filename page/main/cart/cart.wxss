/* pages/cart/cart.wxss */
.container{
  width: 100%;
	height:100%;
  box-sizing: border-box;
  background-color: #f2f2f2;
  padding: 0;
	z-index:1;
}
.goods_have{
  width: 100%;
	height:100%;
	/* padding-bottom:90rpx; */
  box-sizing: border-box;
}
.goods_list{
  width: 100%;
  padding-left: 15px;
  padding-right: 15px;
  background-color: #fff;
  margin-bottom: 10px;
  overflow: hidden;
  padding-top: 20px;
  box-sizing: border-box;
  padding-bottom: 12px;
  position: relative;
}
.goods_list:nth-last-of-type(1){
  margin-bottom: 0;
}
.goods_list .select{
  position: absolute;
  top: 50%;
  margin-top:-8px;
  left: 30rpx;
  z-index: 99;
}

.goods_list .good_pic{
  float: left;
  width: 200rpx;
  height: 200rpx;
  padding-right: 10px;
  margin-left: 26px;
  z-index: -10;
}
.goods_list .good_pic image{
  width: 100%;
  height: 100%;
  border-radius: 4px;
}
.goods_list .good_det{
  margin-left: 126px;
}
.goods_list .good_det .good_name{
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
}
.goods_list .good_det .good_spec{
  font-size: 24rpx;
  color: #999999;
  letter-spacing: 0;
  padding-top: 12rpx;
  line-height: 34rpx;
  position: relative;
}
.goods_list .good_det .good_spec text{
  font-size: 36rpx;
  color: #C4161E;
  letter-spacing: 0;
  line-height: 40rpx;
  font-family: PingFang-SC-Medium;
  position: absolute;
  right: 0;
}
.goods_list .good_det .good_option{
  overflow: hidden;
  position: relative;
  padding-top: 30rpx;
}
.goods_list .good_det .good_option .minus,.goods_list .good_det .good_option .add{
  display: inline-block;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  box-sizing: border-box;
  text-align: center;
  margin: 0;
  padding: 0;
  font-size: 24rpx;
  color: #999999;
  letter-spacing: 0;
  background: #D8D8D8;
  border-radius: 0;
  border-color: #D8D8D8;
}
.goods_list .good_det .good_option .minus{
  float: left;
  border-radius: 4px 0 0 4px;
  
}
.goods_list .good_det .good_option .add{
  float: left;
  border-radius: 0 4px 4px 0;
}
.goods_list .good_det .good_option .num{
  float: left;
  /* display: inline-block; */
  box-sizing: border-box;
  border-top: 1px solid #D8D8D8;
  border-bottom: 1px solid #D8D8D8;
  line-height: 44rpx;
  width: 88rpx;
  text-align: center;
  height: 44rpx;
  font-size: 28rpx;
  color: #333333;
}
.goods_list .good_det .good_option image{
  width: 27rpx;
  height: 31.4rpx;
  position: absolute;
  right:0;
  bottom: 0;
}
.settle{
  box-sizing: border-box;
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  background: #FFFFFF;
  border-top: 1px solid #F2F2F2;
  font-size: 14px;
  color: #666666;
  letter-spacing: 0;
  position: fixed;
  bottom: 0;
  left: 0;
  overflow: hidden;
  padding-left: 14px;
	z-index:100;
}
.settle icon{
	margin-right:20rpx;
	margin-top:16rpx; 
	float:left;
}
.settle .rt{
  float: right;
}
.settle .rt .red{
  font-size: 36rpx;
  color: #C4161E;
}
.settle navigator{
  width: 180rpx;
  background: #C4161E;
  text-align: center;
  font-size: 16px;
  color: #FFFFFF;
  letter-spacing: 0;
  height: 84rpx;
  float: right;
  margin-left: 24rpx;
}
.goods_none{
	text-align: center;
	background:#fff;
  color: #999;
	padding-top:200rpx;
}
.sa{
	float:left;
}