}
.left_03{
  width: 24px;
  height: 24px;
  vertical-align: -5px;
}
.left_04{
  width: 19px;
  height: 24px;
  vertical-align: -7px;
}
.left_05{
  width: 20px;
  height: 24px;
  vertical-align: -5px;
}
.left_06{
