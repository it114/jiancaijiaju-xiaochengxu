.container{
  width:100%;
  background:#F2F2F2;
}
.top_info{
  width:100%;
  padding-bottom:25rpx;
  background: #ffffff;
}

.top_bg{
  width:100%;
  height:400rpx;
}
.swiper, swiper-item{
  width:100%;
  height:100%;
}
swiper-item image{
  width:100%;
  height:100%;
}

.top_bg > image{
  width:100%; 
  height:100%;
}
.info_detail{
  width:100%;
  /* height:104rpx; */
  padding:15rpx 40rpx 0; 
  box-sizing: border-box; 
}
.left_title{
  width:445rpx;
  /* height:90rpx; */
  font-size:28rpx;
  color:#333333;
  line-height:40rpx;
  padding-right:25rpx; 
  padding-top:10rpx;
  box-sizing:border-box;
  float:left;
  overflow:hidden;  
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.right_count{
  height:60rpx;
  font-size:28rpx;
  color:#999999;
  border-left:1px solid #f2f2f2;
  float:left;
  padding-left:25rpx;
  line-height:60rpx;
}
.a_time{
  clear:left;
  padding:29rpx 40rpx 0;
  font-size:24rpx;
  color:#666666;
  line-height:34rpx;
  box-sizing: border-box;
}
.a_place{
  font-size:24rpx;
  color:#666666;
  padding-left:40rpx;
  padding-top:10rpx;
  line-height:34rpx;  
  box-sizing: border-box;
}
.a_time image{
  width:28rpx;
  height:28rpx;
  vertical-align: middle;
  margin-right:14rpx;
  margin-top:-4rpx;
}
.a_place image{
  width:32rpx;
  height:32rpx;
  vertical-align: middle;
  margin-right:14rpx;
  margin-top:-4rpx;  
}
.activity_intro{
  width:100%;
  margin-top:20rpx;
  padding:24rpx 30rpx 16rpx;
  box-sizing: border-box;
  background: #FFFFFF;
}
.ai_tag{
  font-size: 28rpx;
  color: #333333;
  line-height:40rpx;
}
.ai_text{
  font-size:24rpx;
  color: #333333;
  margin-top:24rpx;
  line-height:34rpx;
  margin-bottom:24rpx;
}
.ai_img{
  width:100%;
  height:308rpx;
  border-radius:8rpx;
  margin-bottom:24rpx;
  overflow: hidden;
}
.ai_img image{
  width:100%;
  height:100%;
}
.btn{
  width:100%;
  background: #ffffff;
  padding-bottom:40rpx;
}
.btm_btn{
  width:84%;
  height:88rpx;
  background: #C4161E;
  border-radius: 4px;
  color:#ffffff;
  font-size:32rpx;
  line-height:88rpx;
}
.dialog_box{
  width:100%;
  height:100%;
  position: fixed;
  top:0;
  left:0;
  /* background: rgba(0,0,0,0.50); */
  z-index: 1;
}
.db_mask{
	width:100%;
  height:100%;
  position: fixed;
  top:0;
  left:0;
	background: rgba(0,0,0,0.50);
  z-index: 2;	
}
.db_body{
  width:73.3%;
  height:384rpx;
  background: #ffffff;
  border-radius:4px;
  padding:40rpx 24rpx;
  box-sizing: border-box;
  position:fixed;  
  top:50%;
  left:50%;  
  transform:translateX(-50%) translateY(-50%);  
  z-index: 3;
}
.input_phone,.input_vcode{
  width:100%;
  padding-left:104rpx;
  box-sizing: border-box;
  position: relative;
}
.input_vcode{
  margin-top:24rpx;
}
.input_phone label,.input_vcode label{
  font-size:14px;
  color:#333333;
  line-height:40rpx;
  position:absolute;
  left:0;
  top:20rpx;
}
.input_phone input{
  width:100%;
  height:80rpx;
  border:1px solid #DEDEDE;
  border-radius:4px;
  box-sizing: border-box;
  font-size:14px;
  color:#999999;
  line-height:normal;
  padding-left:24rpx;
  padding-right:24rpx;
}
.input_vcode input{
  width:238rpx;
  height:80rpx;
  border:1px solid #DEDEDE;
  border-radius:4px;
  box-sizing: border-box;
  font-size:14px;
  color:#999999;
  line-height:normal;
  padding-left:24rpx;
  padding-right:24rpx;
}
.get_vcode{
  width:140rpx;
  height:56rpx;
  background: #C4161E;
  font-size:24rpx;
  color:#FFFFFF;
  text-align: center;
  line-height:56rpx;
  border-radius:4px;
  position:absolute;
  right:0;
  top:16rpx;
}
.submit{
  width:230rpx;
  height:80rpx;
  background: #C4161E;
  font-size:32rpx;
  color:#FFFFFF;
  text-align: center;
  line-height:80rpx;
  margin:40rpx auto 0;
}

.text_info{
    width:100%;
    padding:30rpx;
    font-size:28rpx;
    line-height:20px;
    box-sizing: border-box;
}
.img_list,.img_item,.img_item>image{
    width:100%;
}