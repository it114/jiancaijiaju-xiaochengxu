.container{
  width:100%;
  height:100%;
  background: #fff;
}
.activity_list{
  width:100%;
  height:196rpx;
  padding:12px 15px 0px;
  box-sizing: border-box;
  position:relative;
  margin-top: 6px;
}
.left_img{
  width:172rpx;
  height:172rpx;
  overflow: hidden;
  position:absolute;
}
.left_img image{
  width:100%;
  height:100%;
  border-radius:4px;
}
.right_info{
  width:100%;
  padding-left:192rpx;
  box-sizing:border-box;
}
.right_info .title{
  height:80rpx;
  font-size:28rpx;
  color:#333333;
  line-height:40rpx;
  overflow:hidden;  
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.place,.time{
  font-size:24rpx;
  color:#666666;
   line-height:34rpx; 
}
.time{
  margin-top:14rpx;
}
.place{
  margin-top:10rpx;
}
.time image{
  width:28rpx;
  height:28rpx;
  vertical-align: middle;
  margin-top:-4rpx;
  margin-right:10rpx;
}
.place image{
  width:32rpx;
  height:32rpx; 
  vertical-align: middle;
  margin-top:-4rpx;  
  margin-right:10rpx;  
}