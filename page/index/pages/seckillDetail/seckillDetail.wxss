.container{
  width:100%;
  height:100%;
  background: #f2f2f2;
  z-index:1;
}
.top_bg{
  width:100%;
  height:400rpx;
}
.swiper, swiper-item{
  width:100%;
  height:100%;
}
swiper-item image{
  width:100%;
  height:100%;
}
.title_price{
  width:100%;
  background: #fff;
  padding:24rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}
.title{
  width:564rpx;
  height:80rpx;
  line-height:40rpx;
  font-size:28rpx;
  padding-right:20rpx;
  color:#333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  border-right: 1px solid #DEDEDE;
}
.price{
  margin-top:12rpx;
}
.cny{
  font-size: 24rpx;
  color:#C4161E;
}
.collect{
  width:54rpx;
  text-align: center;
  font-size:24rpx;
  color:#333333;
  position: absolute;
  right:40rpx;
  top:24rpx;
}
.price_info{
  font-size:36rpx;
  color:#C4161E;
}
.c_img image{
  width:32rpx;
  height:32rpx;
}
.c_tag{
  margin-top:10rpx;
}
.spec{
  width:100%;
  margin-top:24rpx;
  background: #fff;
  padding-left:30rpx;
  padding-right:30rpx;
  box-sizing: border-box;
}
.color{
  width:100%;  
  padding-left:30rpx;
  padding-right:30rpx;
  box-sizing: border-box;
  background: #fff;
}
.count{
  width:100%;  
  padding-left:30rpx;
  padding-right:30rpx;
  padding-bottom:24rpx;
  box-sizing: border-box;
  background: #fff;
}
.s_title,.c_title,.c_count{
  font-size: 28rpx;
  color: #333333;
  line-height:40rpx;
  padding-top:40rpx;
}
.spec_list,.color_list {
  margin-top:24rpx;  
}
.spec_list #active,.color_list #selected{
  background: #C4161E;
  color:#fff;
}
.sl_item,.cl_item{
  height:44rpx;
  line-height:44rpx;
  padding-left:16rpx;
  padding-right:16rpx;
  background: #DEDEDE;
  font-size:24rpx;
  color:#999999;
  border-radius: 4px;
  display: inline-block;
  margin-right:24rpx;
  margin-bottom:14rpx;
}
.add_minus{
  width:88px;
  height:22px;
  margin-top:12px;
  position:relative;
  border:1px solid #DEDEDE;
  border-radius:4px;
  box-sizing: border-box;
  overflow: hidden;
}
.add_minus input{
  width:44px;
  height:22px;
  text-align: center;
  font-size:14px;
  color:#333333;
  position: absolute;
  top:0;
  left:22px;
  /* border-top:1px solid #DEDEDE;
  border-bottom:1px solid #DEDEDE;  */
  box-sizing: border-box;
}
.add_minus .minus{
  width:22px;
  height:22px;
  background: #D8D8D8;
  font-size:12px;
  color:#999999;
  /* border-radius: 4px 0 0 4px; */
  text-align: center;
  line-height:20px;
  position:absolute;
  top:0;
  left:0;
}
.add_minus .add{
  width:22px;
  height:22px;
  background: #D8D8D8;
  /* border-radius: 0 4px 4px 0; */
  font-size:12px;
  color:#999999;
  text-align: center;
  line-height:20px;
  position:absolute;
  top:0;
  right:0;
}
.detail{
  width:100%;
  background: #fff;
  margin-top:24rpx;
  padding:40rpx 30rpx 110rpx;
  box-sizing: border-box;
}
.d_tag{
  font-size:28rpx;
  color:#333333;
  line-height:40rpx;
  margin-bottom:24rpx;
}
.img_group{
  width:100%;
  height:400rpx;
  margin-bottom:24rpx;
}
.img_group image{
  width:100%;
  height:100%;
}
.text{
  font-size:24rpx;
  color: #333333;
  margin-top:24rpx;
  line-height:34rpx;
}
.btm_group{
  width:100%;
  height:98rpx;
  box-sizing: border-box;
  position: fixed;
  bottom:0;
  left:0;
  background: #fff;
  z-index:3;
  border-top: 1px solid #F2F2F2;
}
.group_inner{
  width:100%;
  height:100%;
  position:relative;
  box-sizing: border-box;
}
.share{
  position: absolute;
  left:58rpx;
  top:12rpx;
  text-align: center;
}
.cart{
  position: absolute;
  top:12rpx;
  left:164rpx;
  text-align: center;  
}
.share_icon image{
  width:40rpx;
  height:40rpx;
}
.cart_icon image{
  width:40rpx;
  height:40rpx;
  margin:0 auto;
  margin-left:-6rpx;
}
.tag{
  font-size: 20rpx;
  color: #999999;
}
.right_btn{
    width:90%;
    height:80rpx;
    border-radius:4px;
    position: absolute;
    right:5%;
    top:9rpx;
    overflow: hidden;
    box-sizing: border-box;
}
.add_cart,.buy_now{
  width:47%;
  height:80rpx;
  text-align: center;
  line-height:80rpx;
  font-size:32rpx;
  color:#fff;
  box-sizing: border-box;
  border-radius:4px;
}
.add_cart{
  float:left;
  background: #FFC100;
}
.buy_now{
  float:right;
  background: #C4161E;
}
.input{
  display: block;
  width: 100%;
  text-align: center;
  line-height: 20px;
}
.ask_friends{
   background: #FFC100;
  /* background: #fff; */
   /* border-color: red; */
   line-height:80rpx;
  margin: 0;
  padding: 0;
  font-size:32rpx;
}
button::after{
border:none;
}
input{
outline:none;
border:none;
list-style: none;
}

.comment{
  border-bottom: 1px solid #f2f2f2;
  overflow: hidden;
  background: #fff;
  margin-top: 24rpx;
  padding: 0 30rpx;
}
.comment text{
  height: 52px;
  line-height: 52px;
  font-size: 14px;
  color: #333;
  float: left;
  
}
.comment .right{
  float: right;
  font-size: 12px;
  color: #333;
  line-height: 52px;
}
.comment .next{
  /* float: right; */
  width: 7px;
  height: 12px;
  margin-left: 4px;
}
.userInfo{
  position: relative;
  background: #fff;
  padding: 30rpx;
}
.userInfo image{
  width: 30px;
  height: 30px;
  border-radius: 15px;
  float: left;
}
.userInfo .name{
  float: left;
  font-size: 14px;
  color: #333;
  line-height: 30px;
  margin-left: 4px;
}
.userInfo .words{
  font-size: 12px;
  color: #333;
  margin-top: 4px;
}
.userInfo .time{
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
  font-size: 10px;
  color: #999;
}
.text_info{
    width:100%;
    padding:30rpx;
    font-size:28rpx;
    line-height:20px;
    box-sizing: border-box;
}
.img_list,.img_item,.img_item>image{
    width:100%;
}