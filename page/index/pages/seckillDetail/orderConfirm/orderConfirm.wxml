<view class="blank_bg"></view>

<view class="about_money">
    <view class="item_count">
        <text class="left_tag">商品金额</text>
        <text class="right_ctn">¥{{totalPrice}}</text>
    </view>
    <view class="item_fee">
        <text class="left_tag">运费</text>
        <text class="right_ctn">¥0.00</text>
    </view>
</view>

<view class="actual_pay">
    <text class="ap_tag">实付金额：</text>
    <text class="ap_num">¥{{payFee}}</text>
</view>

