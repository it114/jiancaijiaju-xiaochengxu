<view class="rcv_info">
  <navigator url="../../address/address" hover-class='none'>
    <view class="info_top">
        <text class="name">{{addressInfo.name}}</text>
        <text class="phone">{{addressInfo.phone}}</text>
    </view>
    <image class="addr" src="../../../icons/location.png"></image>
    <image class="arro" src="../../../icons/arrright.png"></image>
      <view class="info_btm">
          <text>{{addressInfo.areaName}}{{addressInfo.info}}</text>
      </view>
    </navigator>
</view>
<view class="item_detail">
    <view class="left_thumb">
        <image src="{{image}}" ></image>
    </view>
    <view class="right_info">
        <view class="item_name">{{title}}</view>
        <view class="item_spec">
            {{valueName}}
        </view>
        <text class="item_price">¥{{price}}</text>
        <text class="item_number">x{{num}}</text>
    </view>
</view>

