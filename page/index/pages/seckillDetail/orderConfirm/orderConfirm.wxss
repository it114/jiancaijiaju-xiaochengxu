.coupon{
    width:100%;
    height:160rpx;
    line-height:160rpx;
    padding-left:30rpx;
    padding-right:80rpx;
    box-sizing:border-box;
    position:relative;
}
.cp_left{
    font-size:28rpx;
    color:#333;
    float:left;
}
.cp_right{
    font-size:24rpx;
    color:#999;
    float:right;
}
.sel_coupon{
   width:18px;
   height:18px;
   position:absolute;
   top:50%;
   margin-top:-9px;
   right:30rpx;
}
.blank_bg{
    width:100%;
    height:10px;
    background: #f0f0f0;
}
.about_money{
    width:100%;
    /* height:200rpx; */
    padding:30rpx;
    box-sizing: border-box;
    border-bottom:1px solid #f0f0f0;
}
.item_count,.item_fee{
    width:100%;
    line-height:20px;
    overflow:hidden;
}
.left_tag{
    float:left;
    font-size:28rpx;
    color:#999;
}
.right_ctn{
    float:right;
    font-size:28rpx;
    color:#c4161f;
}
.actual_pay{
    width:100%;
    padding:30rpx;
    box-sizing: border-box;
    text-align: right;
}
.ap_tag{
    font-size:30rpx;
    color:#999;
}
.ap_num{
    font-size:30rpx;
    color:#c4161f;
}
.btm_settle{
    width:100%;
    height:40px;
    position:fixed;
    left:0;
    bottom:0;
    margin-top:50px;
    /* border-top:1px solid #f0f0f0; */
    background:#c4161f;
    text-align: center;
    line-height:40px;
    font-size:32rpx;
    color:#fff;
}