page{
    width:100%;
    height:100%;
}
.rcv_info{
    width:100%;
    height:200rpx;
    padding:40rpx 80rpx;
    background:#fff;
    box-sizing:border-box;
    position:relative;
}
.info_top{
    font-size:28rpx;
    color:#333;
}
.name{
    margin-right:10px;
}
.info_btm{
    font-size:24rpx;
    color:#666;
    line-height:20px;
}
.addr{
   width:18px;
   height:18px;
   position:absolute;
   top:80rpx;
   left:30rpx;
}
.arro{
   width:18px;
   height:18px;
   position:absolute;
   top:80rpx;
   right:30rpx;
}

.item_detail{
    width:100%;
    padding-left:200rpx;
    background:#f7f7f7;
    position:relative;
    box-sizing:border-box;
}
.left_thumb{
    width:150rpx;
    height:150rpx;
    overflow: hidden;
    position:absolute;
    left:30rpx;
    top:40rpx;
}
.left_thumb>image{
    width:100%;
    height:100%;
}
.right_info{
    width:100%;
    padding-top:40rpx;
    padding-right:160rpx;
    padding-bottom:40rpx;
    position:relative;
    box-sizing: border-box;
}
.item_name{
    width:100%;
    font-size:32rpx;
    color:#333;
    overflow: hidden;
    text-overflow: ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 
}
.item_spec{
    font-size:28rpx;
    color:#666;
    margin-top:20rpx;
}
.item_price{
    font-size:32rpx;
    position: absolute;
    right:30rpx;
    top:40rpx;
}
.item_number{
    font-size:24rpx;
    color:#666;
    position:absolute;
    right:30rpx;
    top:100rpx;
}
