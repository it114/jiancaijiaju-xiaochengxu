.seckill_goods{
  width:100%;
  height:240rpx;
  padding-left:30rpx;
  padding-right:30rpx;
  margin-bottom:24rpx;
  box-sizing:border-box;
  position:relative;
}
.left_img{
  width:240rpx;
  height:240rpx;
  border-radius:4px;
  overflow: hidden;
  position: absolute;
  top:0;
  left:30rpx;
}
.left_img image{
  width:100%;
  height:100%;
}
.right_info{
  width:100%;
  height:240rpx;
  padding-left:260rpx;
  box-sizing: border-box;
  position:relative;
}
.goods_title{
  height:80rpx;
  font-size:28rpx;
  color:#333333;
  line-height:40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.seckill_progress{
  margin-top:8rpx;
  overflow: hidden;
}
.sp_full{
  width:320rpx;
  height:32rpx;
  border-radius:200rpx;
  background: rgba(196,22,30,0.50);
  position:relative;
  float:left;
}
.sp_current{
  height:32rpx;
  background:#C4161E;
  border-radius:200rpx;
  position: absolute;
  top:0;
  left:0;
}
.seckill_percent{
  float:left;
  font-size:28rpx;
  color:#333333;
  line-height:32rpx;
  margin-left:12rpx;
}
.goods_price{
  position:absolute;
  bottom:0;
}
.cny{
  font-size: 24rpx;
  color: #C4161E;
  line-height: 22px;
}
.original_price{
  font-size:36rpx;
  color:#C4161E;
  margin-left:6rpx;
}
.present_price{
  font-size:28rpx;
  color:#3F3F3F;
  line-height:34rpx;
  text-decoration: line-through;
  margin-left:12rpx;
}
.buy_now{
  width:136rpx;
  height:64rpx;
  border-radius:8rpx;
  text-align: center;
  line-height:64rpx;
  font-size:28rpx;
  color:#fff;
  position:absolute;
  right:0;
  bottom:0;
  background: #C4161E;
}
.population image{
  width:20rpx;
  height:20rpx;
}
.p_tag{
  margin-left:8rpx;
  margin-right:16rpx;
}
.p_tag,.total{
  font-size:24rpx;
  color:#999999;
}
.bought{
  font-size:24rpx;
  color:#C4161E;
}